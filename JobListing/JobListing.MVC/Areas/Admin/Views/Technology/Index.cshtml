
@{
    ViewBag.Title = "Technologies";
}


<div class="container">
    <div class="list-view-container">
        <div class="list-view-header">
            <h1>@ViewBag.Title</h1>
            <a asp-area="Admin" asp-controller="Technology" asp-action="Add" class="btn btn-primary-purple">Add New</a>
        </div>
        <div class="list-view-body">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Image</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td class="Name">JavaScript</td>
                        <td class="image"><img src="https://upload.wikimedia.org/wikipedia/commons/9/99/Unofficial_JavaScript_logo_2.svg" /></td>
                        <td class="actions">
                            <div class="list-action-container">
                                <a class="edit">Edit <i class="fa-solid fa-pen"></i></a>
                                <form class="delete" method="post">
                                    <button type="submit">
                                        Delete
                                        <span><i class="fa-solid fa-trash-can"></i></span>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Jacob</td>
                        <td>Thornton</td>
                        <td>@@fat</td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td colspan="2">Larry the Bird</td>
                        <td>@@twitter</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    
</div>