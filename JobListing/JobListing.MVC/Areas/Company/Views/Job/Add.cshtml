@model AddJobInputModel

@{
    ViewBag.Title = "Add New Job";
}


<div class="container">
<div class="job-container">
    <h1 class="text-center">@ViewBag.Title</h1>
    <div class="card">
        <div class="card-body">
            <form method="post" asp-area="Company" asp-controller="Job" asp-action="Add">
                <div class="group-form">
                    <h3>Job Info</h3>
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.Title" class="form-control" placeholder="Full Stack Developer" />
                            <label asp-for="@Model.Title">Job Title</label>
                            <span asp-validation-for="@Model.Title" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.TechnologiesList">Technologies</label>
                            <select size="3" name="technologies" class="form-select multiple-select" multiple asp-for="@Model.TechnologiesList">
                                @foreach (var technology in Model.TechnologiesList)
                                {
                                    var isSelected = Model.Technologies.Any(t => t == technology.Id);
                                    <option selected="@isSelected" value="@technology.Id">
                                        <img class="technology-image" src="@technology.ImageUrl" alt="@technology.Name" />
                                        <span class="technology-name">@technology.Name</span>
                                    </option>
                                }
                            </select>
                        </div>
                        
                    <hr />
                </div>
                    <div class="group-form">
                        <h3>Description</h3>
                        <div class="form-floating mb-3">
                            <textarea asp-for="@Model.Description" class="form-control" placeholder="I'm a software developer..."></textarea>
                            <label asp-for="@Model.Description">Description</label>
                            <span asp-validation-for="@Model.Description" class="text-danger"></span>
                        </div>
                    </div>
                <button type="submit" class="btn btn-primary-purple">Add Job</button>
            </form>
        </div>

    </div>
</div>
</div>


