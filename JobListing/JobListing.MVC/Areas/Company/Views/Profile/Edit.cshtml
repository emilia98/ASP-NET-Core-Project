@model UpdateCompanyProfileInputModel

@{
    ViewBag.Title = "Update Profile";
}

<div class="container">
    <div class="update-profile-container">
        <h1 class="text-center">@ViewBag.Title</h1>
        <div class="card">
            <div class="card-body">
                <form method="post" asp-area="Company" asp-controller="Profile" asp-action="Edit" asp-route-id="@Model.Id">
                    <div class="group-form">
                        <h3>Account Info</h3>
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    <input asp-for="@Model.UserName" class="form-control" placeholder="john.123" readonly aria-label="readonly input example" />
                                    <label asp-for="@Model.UserName">UserName</label>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-floating mb-3">
                                    <input asp-for="@Model.Email" class="form-control" placeholder="hohn@example.com" readonly aria-label="readonly input example" />
                                    <label asp-for="@Model.Email">Email</label>
                                </div>
                            </div>
                        </div>
                        <hr />
                    </div>
                    <div class="group-form">
                        <h3>Company Info</h3>
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    <input asp-for="@Model.Name" class="form-control" placeholder="Apple" />
                                    <label asp-for="@Model.Name">Company Name</label>
                                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-floating mb-3">
                                    <input asp-for="@Model.Bulstat" class="form-control" placeholder="123456789" />
                                    <label asp-for="@Model.Bulstat">Bulstat</label>
                                    <span asp-validation-for="@Model.Bulstat" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.LogoUrl" class="form-control" placeholder="www.example.com/logo.png" />
                            <label asp-for="@Model.LogoUrl">Logo URL</label>
                            <span asp-validation-for="@Model.LogoUrl" class="text-danger"></span>
                        </div>
                        <hr />
                    </div>
                    <div class="group-form">
                        <h3>Contacts Info</h3>
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="John" />
                                    <label asp-for="@Model.PhoneNumber">Phone Number</label>
                                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-floating mb-3">
                                    <input asp-for="@Model.WebsiteUrl" class="form-control" placeholder="www.example.com" />
                                    <label asp-for="@Model.WebsiteUrl"><i class="fa-solid fa-globe"></i> Website URL</label>
                                    <span asp-validation-for="@Model.WebsiteUrl" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    <input asp-for="@Model.LinkedInUrl" class="form-control" placeholder="www.linkedin.com" />
                                    <label asp-for="@Model.LinkedInUrl"><i class="fa-brands fa-linkedin"></i> LinkedIn URL</label>
                                    <span asp-validation-for="@Model.LinkedInUrl" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-floating mb-3">
                                    <input asp-for="@Model.FacebookUrl" class="form-control" placeholder="www.facebook.com" />
                                    <label asp-for="@Model.FacebookUrl"><i class="fa-brands fa-square-facebook"></i> Facebook URL</label>
                                    <span asp-validation-for="@Model.FacebookUrl" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <hr />
                    </div>
                    <div class="group-form">
                        <h3>Biography</h3>
                        <div class="form-floating mb-3">
                            <textarea asp-for="@Model.Description" class="form-control" placeholder="I'm a software developer..."></textarea>
                            <label asp-for="@Model.Description">Description</label>
                            <span asp-validation-for="@Model.Description" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary-purple">Update Profile</button>
                </form>
            </div>

        </div>
    </div>
</div>
